<Window x:Class="SharpReplay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharpReplay"
        mc:Ignorable="d" Initialized="Window_Initialized"
        Title="MainWindow" Height="272" Width="234">
    <StackPanel VerticalAlignment="Center">
        <Button x:Name="Restart" Width="90" Height="40" Click="Restart_Click">Restart recording</Button>

        <ListView x:Name="Audio" ItemsSource="{Binding AudioDevices}" Width="200" Height="80" Margin="0 10 0 0">
            <ListBox.ItemTemplate>
                <HierarchicalDataTemplate>
                    <CheckBox Content="{Binding PrettyName}" IsChecked="{Binding Enabled}"/>
                </HierarchicalDataTemplate>
            </ListBox.ItemTemplate>
        </ListView>
    </StackPanel>
</Window>

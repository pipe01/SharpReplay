<Window x:Class="SharpReplay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharpReplay"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Width="90" Height="40" Click="Button_Click">Begin recording</Button>
        <Button Width="90" Height="40" Click="Save_Click">Save replay</Button>
        <Button Width="90" Height="40" Click="Stop_Click">Stop recording</Button>
    </StackPanel>
</Window>
